<% include ../partials/header %>

<main class="container form-boundary mt-4">
    <form class="form-horizontal">

        <fieldset>

            <!-- Form Name -->
            <legend>Edit Ingredient</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-name">Ingredient name</label>
                <div class="col-lg-12 edit-form-textarea">
                    <input id="recipe-name" name="recipe-name" type="text" placeholder="<%=ingredient.name%>" class="form-control input-md">
                </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-description">Ingredient description</label>
                <div class="col-lg-12 edit-form-textarea">
                    <textarea class="form-control" id="recipe-description" name="recipe-description"><%=ingredient.content%></textarea>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-name">Proteins</label>
                <div class="col-lg-12 edit-form-textarea">
                    <input id="ingredient-proteins" name="ingredient-proteins" type="text" placeholder="<%=ingredient.proteins%>" class="form-control input-md">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-name">Grease</label>
                <div class="col-lg-12 edit-form-textarea">
                    <input id="ingredient-grease" name="ingredient-grease" type="text" placeholder="<%=ingredient.grease%>" class="form-control input-md">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-name">Carbs</label>
                <div class="col-lg-12 edit-form-textarea">
                    <input id="ingredient-carbs" name="ingredient-carbs" type="text" placeholder="<%=ingredient.carbs%>" class="form-control input-md">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-name">Calories</label>
                    <div class="col-lg-12 edit-form-textarea">
                        <input id="ingredient-calories" name="ingredient-calories" type="text" placeholder="<%=ingredient.calories%>" class="form-control input-md">
                    </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="recipe-name">Image</label>
                <div class="col-lg-12 edit-form-textarea">
                    <input id="ingredient-image" name="ingredient-image" type="text" placeholder="<%=ingredient.image%>" class="form-control input-md">
                </div>
            </div>
            <!-- Button (Double) -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="save"></label>
                <div class="col-md-8">
                    <a id="save" name="save" class="btn btn-success" href="#">Save</a>
                    <a id="cancel" name="cancel" class="btn btn-danger" href="/ingredients">Cancel</a>
                </div>
            </div>

        </fieldset>
    </form>
</main>



<% include ../partials/footer %>